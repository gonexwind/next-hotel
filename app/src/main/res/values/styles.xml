<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.Card">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextView.Card.Title">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextView.Card.Subtitle">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextView.Card.Top">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Card.Price">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

</resources>